{
  "options": {
    "ver": "1.0.0",
    "inspectConflicts": false,
    "semicolons": false,
    "freeze": [
      "src/index.js"
    ],
    "ts": false
  },
  "app": {
    "environmentsAllowingSeedData": "",
    "seedData": false,
    "name": "portphilio-api",
    "description": "The API backend for Portphilio",
    "src": "src",
    "packager": "npm@>= 3.0.0",
    "providers": [
      "rest",
      "socketio"
    ]
  },
  "services": {
    "keys": {
      "name": "keys",
      "nameSingular": "key",
      "subFolder": "",
      "fileName": "keys",
      "adapter": "memory",
      "path": "/keys",
      "isAuthEntity": false,
      "graphql": false
    },
    "users": {
      "name": "users",
      "nameSingular": "user",
      "subFolder": "",
      "fileName": "users",
      "adapter": "mongoose",
      "path": "/users",
      "isAuthEntity": false,
      "graphql": true
    },
    "artifacts": {
      "name": "artifacts",
      "nameSingular": "artifact",
      "subFolder": "",
      "fileName": "artifacts",
      "adapter": "mongoose",
      "path": "/artifacts",
      "isAuthEntity": false,
      "graphql": true
    }
  },
  "hooks": {
    "auth0-ip-whitelist": {
      "fileName": "auth0-ip-whitelist",
      "camelName": "auth0IpWhitelist",
      "ifMulti": "y",
      "multiServices": [
        "*app"
      ],
      "singleService": ""
    },
    "search": {
      "fileName": "search",
      "camelName": "search",
      "ifMulti": "y",
      "multiServices": [
        "*none"
      ],
      "singleService": ""
    }
  },
  "middlewares": {
    "authorize": {
      "path": "*",
      "camel": "authorize",
      "kebab": "authorize"
    }
  },
  "connections": {
    "mongoose": {
      "database": "mongodb",
      "adapter": "mongoose",
      "connectionString": "mongodb://localhost:27017/portphilio_api"
    }
  }
}
